set nocompatible
filetype plugin indent on
syntax on

set incsearch
set ignorecase
set smartcase
set hlsearch
nnoremap <silent> <C-l> :<C-u>nohlsearch<CR><C-l>

set tabstop=4
set shiftwidth=4
set laststatus=2

set scrolloff=3

set nobackup
set noswapfile
" disable beep sound
set visualbell t_vb=

set encoding=utf-8
set fileencodings=ucs-bom,iso-2022-jp-3,iso-2022-jp,eucjp-ms,euc-jisx0213,euc-jp,sjis,cp932,utf-8
